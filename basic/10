<html>
  <head>
  </head>

  <body>
    <form>
      <input type="text" id="num1" value=''>
      <input type="text" id="num2" value=''>

      <input type = "button" id = "mul_btn" value = "Mul">
      <input type = "button" id = "div_btn" value = "Div">

      <div id = "div_result"></div>
    </form>
  </body>
    <script>

      mul_btn = document.getElementById("mul_btn");
      div_btn = document.getElementById("div_btn");

      mul_btn.onclick = function(){
        numbers = getInputNumbers();
        showResult(+numbers[0]*+numbers[1])
      }

      div_btn.onclick = function(){
        numbers = getInputNumbers();
        showResult(+numbers[0]/+numbers[1])
      }

      function getInputNumbers() {
        num1 = document.getElementById("num1").value || 0;
        num2 = document.getElementById("num2").value || 0;

        return [num1, num2]
      }

      function showResult(result){
        div_result = document.getElementById("div_result");
        div_result.innerHTML = result;
      }
    </script>
</html>
