//16
function getSum(a, b){
  if (a == b){
    return (a+b)*3;
  }
  return a+b;
}

//17
function getDiffer(num){
  CONST_NUM = 19;
  if (num > CONST_NUM){
    return (num-CONST_NUM)*3;
  }
  return CONST_NUM - num;
}

//18
function checkNumber(a, b) {
  if (a+b == 50 || a == 50 || b == 50) {
    return true;
  }
  return false;
}

//19
function checkWithin(a){
  return (Math.abs(100 - a) <= 20 || Math.abs(400-a) <= 20);
}

//20
function checkForPosNeg(a, b){
  return ( (a >= 0 && b < 0) || (a < 0 && b >= 0) )
}