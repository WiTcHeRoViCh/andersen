//10
num1 = document.getElementById("num1").value;
num2 = document.getElementById("num2").value

mul_btn = document.getElementById("mul_btn");
div_btn = document.getElementById("div_btn");

mul_btn.click = function(){
  showResult(num1*num2)
}

div_btn.click = function(){
  showResult(num1/num2)
}

function showResult(result){
  div_result = document.getElementById("div_result");
  div_result.innerHTML = result;
}

//11
function fromFtoC(fahrenheit){
  C = (fahrenheit - 32)*5/9;
  return C;
}

function fromCtoF (celsium) {
  F = (celsium*9)/5 + 32;
  return F
}

fromCtoF(0)  //32
fromFtoC(32) //0

